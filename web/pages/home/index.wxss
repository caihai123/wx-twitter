.userinfo-box .wall {
  height: 200rpx;
  background-color: #1296db;
}

.userinfo-box .body {
  margin-top: -40px;
  padding: 0 16px;
}

.userinfo-box .body .haeder {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  font-size: 0;
}

.userinfo-box .body .van-image {
  border: 3px solid #fff;
  box-sizing: border-box;
}

.userinfo-box .nickName {
  line-height: 1.5;
  font-size: 20px;
  color: #303133;
}

.userinfo-box .account {
  font-size: 14px;
  color: #909399;
}

.userinfo-box .describe {
  padding: 4px 0;
  font-size: 14px;
  color: #303133;
}

.userinfo-box .friend {
  display: flex;
  padding: 6px 0;
  color: #606266;
}

.item-bar {
  margin-right: 10px;
}

.item-bar .num {
  color: #303133;
}
