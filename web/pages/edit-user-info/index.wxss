/* pages/edit-user-info/index.wxss */
.container {
  margin-bottom: 76px;
}

.wall {
  position: relative;
  height: 421rpx;
  background-color: #1296db;
  color: #fff;
}

.wall image {
  width: 100%;
  height: 100%;
}

.wall .upload {
  width: 100px;
  height: 100px;
  position: absolute;
  left: 50%;
  top: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  transform: translate(-50%, -50%);
}

.avatar-bar {
  position: relative;
  margin: 0 16px;
  margin-top: -41px;
  font-size: 0;
}

.avatar-bar .upload {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 50%;
  top: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  border: 2px solid #fff;
}

.form-item {
  margin: 10px 0;
}

.label {
  padding: 0 16px;
  font-size: 14px;
  color: #909399;
}

.footer {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 16px;
  box-sizing: border-box;
}
