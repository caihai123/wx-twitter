/* pages/index/components/moment-box/index.wxss */

.main {
  height: calc(100vh - 44px);
  background-color: #f7f8fa;
}

.dynamic-item {
  margin: 10px 0;
  padding: 16px;
  background-color: #fff;
}

.dynamic-head {
  display: flex;
  align-items: center;
}

.dynamic-head .portrait {
  width: 48px;
  height: 48px;
  border-radius: 50%;
}

.dynamic-head .dynamic-head-content {
  margin-left: 16px;
}

.dynamic-head .dynamic-head-content .name {
  font-size: 16px;
}

.dynamic-head .dynamic-head-content .describe {
  font-size: 14px;
}

.dynamic-body {
  margin: 10px 0;
  font-size: 14px;
}
.dynamic-body .text {
  margin-bottom: 10px;
}

.dynamic-body .image-grid {
  display: grid;
  grid-template-columns: repeat(3, calc(33.33333% - 6px));
  grid-gap: 9px 9px;
  box-sizing: border-box;
}

.dynamic-body .image-grid .img-item {
  width: 100%;
  height: 200rpx;
}
.dynamic-body .video {
  width: 500px;
  max-width: 100%;
}

.dynamic-body .vote-radio-item {
  margin-top: 8px;
}

.dynamic-foot {
  margin: 0 -16px;
  margin-bottom: -16px;
  line-height: 42px;
  display: flex;
  justify-content: space-around;
  border-top: 1px solid #ebedf0;
  font-size: 12px;
}

.dynamic-foot .van-icon {
  margin-right: 5px;
  font-size: 14px;
}
