page {
  background-color: #f7f8fa;
}
.float-button {
  height: 48px;
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  right: 20px;
  bottom: 20px;
  z-index: 1000;
  background-color: #1989fa;
  border-radius: 50%;
}
.post-item {
  background-color: #fff;
}
.post-item + .post-item {
  margin-top: -1px;
}
.post-item::after,
.post-item::before {
  content: "";
  display: block;
  width: 100%;
  height: 1px;
  background-color: #d1d1d1;
  transform: scaleY(0.5);
}
.post-item .post-main {
  padding: 10px;
}
.post-item .post-aside {
  float: left;
  font-size: 0;
}
.post-item .post-body {
  margin-left: 48px;
  padding-left: 10px;
}
.post-item .post-head {
  display: flex;
  justify-content: space-between;
  line-height: 22px;
  font-size: 14px;
  color: #536471;
}
.post-item .post-head .user-bar {
  display: flex;
  max-width: calc(100% - 24px);
}
.post-item .post-head .nick-name {
  font-size: 15px;
  font-weight: bold;
  color: #111;
}
.post-item .post-head .date {
  position: relative;
  padding-left: 10px;
}
.post-item .post-head .date::before {
  content: "";
  display: inline-block;
  position: absolute;
  top: 50%;
  left: 4px;
  width: 2px;
  height: 2px;
  border-radius: 50%;
  transform: translateY(-50%);
  background-color: #536471;
}
.post-item .post-head .icon-ellipsis {
  transform: rotate(90deg);
}

.post-item .post-content .post-text {
  line-height: 20px;
  font-size: 15px;
  color: #111;
}
.post-item .post-content .img-thum-box {
  margin-top: 8px;
}

.post-foot {
  display: flex;
  justify-content: space-around;
}

.post-foot .tool-item {
  width: 100%;
  padding-top: 10px;
  text-align: left;
  font-size: 18px;
  color: #61707d;
}
.post-foot .tool-item .num {
  padding: 0 6px;
  font-size: 14px;
}
