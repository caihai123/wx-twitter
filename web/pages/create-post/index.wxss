/* pages/create-moment/index.wxss */
.container {
  margin-bottom: 76px;
}
.uploader {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
  padding: 16px;
  grid-gap: 10px 10px;
  font-size: 0;
}
.uploader .uploader-preview {
  position: relative;
  cursor: pointer;
}

.uploader .uploader-upload {
  width: 100%;
  height: 80px;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  color: #dcdee0;
  font-size: 24px;
  background-color: #f7f8fa;
}

.video-box {
  padding: 16px;
}
.my-nav-bar {
  background-color: red;
}

.footer {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 16px;
  box-sizing: border-box;
}
