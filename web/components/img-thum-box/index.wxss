/* components/img-thum-box/index.wxss */

.img-thum-box {
  display: grid;
  grid-gap: 2px 2px;
  border-radius: 10px;
  overflow: hidden;
}
.columns-1 {
  grid-template-columns: repeat(1, 1fr);
}
.columns-1 image {
  width: 100%;
  border-radius: 10px;
}

.columns-2 {
  grid-template-columns: repeat(2, 1fr);
  grid-auto-rows: calc(375rpx - 48px);
}
.columns-3 {
  grid-template-columns: repeat(2, 1fr);
  grid-template-rows: repeat(2, calc(187.5rpx - 24px));
}
.columns-3 image:first-child {
  grid-row-start: span 2;
}

.columns-4 {
  grid-template-columns: repeat(2, 1fr);
  grid-auto-rows: calc(187.5rpx - 24px);
}
.columns-else {
  grid-template-columns: repeat(3, 1fr);
  grid-auto-rows: calc(187.5rpx - 24px);
}
.columns-2 image,
.columns-3 image,
.columns-4 image,
.columns-else image {
  width: 100%;
  height: 100%;
}
